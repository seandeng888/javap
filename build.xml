<?xml version="1.0" encoding="UTF-8" ?>

<project name="javap" default="run" basedir=".">
	<property name="src" value="src" />
	<property name="dest" value="classes" />
	<property name="javapjar" value="javap.jar" />
	<target name="init">
		<mkdir dir="${dest}" />
	</target>
	<target name="compile" depends="init">
		<javac srcdir="${src}" destdir="${dest}" >
			<compilerarg line="-encoding UTF-8 "/>   
		</javac>
	</target>
	<target name="build" depends="compile">
		<jar jarfile="${javapjar}" basedir="${dest}" />
	</target>
	<target name="run" depends="build">
		<java classname="org.seandeng.common.SystemProperties" classpath="${javapjar}" />
	</target>
	<target name="clean">
		<delete dir="${dest}" />
		<delete file="${javapjar}" />
	</target>
	<target name="rerun" depends="clean,run">
		<ant target="clean" />
		<ant target="run" />
	</target>
</project>